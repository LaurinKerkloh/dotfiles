[branch]
    sort = -committerdate
[column]
    ui = auto
[commit]
    verbose = true
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicprefix = true
    renames = true
[fetch]
    prune = true
    pruneTags = true
[init]
    defaultBranch = main
[user]
    name = Laurin Kerkloh
    email = laurin@kerk-loh.de
[pull]
    rebase = false
[push]
    default = simple
    autoSetupRemote = true
    followTags = true
[rerere]
    enabled = true
    autoupdate = true
[tag]
    sort = version:refname
