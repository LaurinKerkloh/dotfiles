[init]
	defaultBranch = main
[user]
	name = Jonas Weber
	email = jonas@jole.dev
[pull]
    rebase = false
[rerere]
	enabled = true
[maintenance]
    repo = ~/.dotfiles
	repo = ~/code/reditus/intern

# git-delta
[include]
	path = ~/.dotfiles/.local/share/catppuccin-delta/catppuccin.gitconfig
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    side-by-side = true
    features = catppuccin-mocha
    navigate = true
[merge]
    conflictstyle = zdiff3
[diff]
    colorMoved = default
