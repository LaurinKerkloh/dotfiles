#!/usr/bin/env bash

# Select the directory to open in a (new) tmux session
if [[ $# -eq 1 ]]; then
  selected=$1
else
  selected=$(
    (
      find /home ~/code ~/code/reditus -mindepth 1 -maxdepth 1 -type d
      find ~/dotfiles -name .config -not -path '*/.git/*' -type d -exec find {} -mindepth 1 -maxdepth 1 -type d \;
      find ~/dotfiles -name .local -not -path '*/.git/*' -type d -exec find {} -mindepth 1 -maxdepth 1 -type d \;
      find ~/dotfiles -name ssh -not -path '*/.git/*' -type d -exec find {} -mindepth 1 -maxdepth 1 -type d \;
      echo ~/dotfiles
    ) | fzf
  )
fi

# Exit if no directory was selected
if [[ -z $selected ]]; then
  exit 0
fi

# Get the name of the selected directory and replace dots with underscores
selected_name=$(basename "$selected" | tr . _)

# Check if tmux is already running
tmux_running=$(pgrep tmux)

# If tmux is not running, start a new session with the selected directory
if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
  tmux new-session -s $selected_name -c $selected
  exit 0
fi

# If tmux is running and no session with the selected directory exists, create
# a new session with the selected directory
if ! tmux has-session -t=$selected_name 2>/dev/null; then
  tmux new-session -ds $selected_name -c $selected
fi

# Attach or switch to the session based on whether we are in a tmux client
if [[ -z $TMUX ]]; then
  tmux attach-session -t $selected_name
else
  tmux switch-client -t $selected_name
fi
