{
    "erb": {
        "prefix": "erb",
        "body": [
            "<%= ${1} %>"
        ]
    },
    "erbif": {
        "prefix": "erbif",
        "body": [
            "<% if ${1} %>",
            "\t${2}",
            "<% else %>",
            "\t${3}",
            "<% end %>"
        ]
    },
    "erbblock": {
        "prefix": "erbblock",
        "body": [
            "<% ${1} do ${2} %>",
            "\t${3}",
            "<% end %>"
        ]
    }
}
