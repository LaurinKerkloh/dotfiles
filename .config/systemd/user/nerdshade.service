[Unit]
Description=Run nerdshade command
PartOf=graphical-session.target
Requires=graphical-session.target
After=graphical-session.target
ConditionEnvironment=WAYLAND_DISPLAY

[Service]
Type=simple
ExecStart=/usr/bin/nerdshade -loop -tempDay 6000 -tempNight 3000 -latitude 50.941 -longitude 6.958
Slice=session.slice
Restart=on-failure

[Install]
WantedBy=graphical-session.target
