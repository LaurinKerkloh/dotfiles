#!/bin/bash

set -e

pkill wofi || [[ $? -eq 1 ]]

entries="--- Shutdown\n--- Reboot\n--- BIOS\n--- Suspend\n--- Logout"

selected=$(echo -e $entries | wofi --show drun,dmenu | awk '{print tolower($2)}')

case $selected in
  shutdown)
    exec systemctl poweroff -i;;
  reboot)
    exec systemctl reboot;;
  bios)
    exec systemctl reboot --firmware-setup;;
  suspend)
    exec systemctl suspend;;
  logout)
    exec hyprctl dispatch exit NOW;;
esac
