#!/bin/bash

set -e

case "$1" in
    "")
        echo -en "\0no-custom\x1ftrue\n"

        echo -en "Shutdown\0icon\x1fsystem-shutdown\n"
        echo -en "Reboot\0icon\x1fsystem-reboot\n"
        echo -en "Relaunch\0icon\x1femblem-synchronizing\n"
        echo -en "Suspend\0icon\x1fmedia-playback-pause-symbolic\n"
        echo -en "BIOS\0icon\x1fsystem-settings\n"
        ;;
    *Shutdown*)
        systemctl poweroff
        ;;
    *Reboot*)
        systemctl reboot
        ;;
    *Relaunch*)
        loginctl terminate-user ""
        ;;
    *Suspend*)
        systemctl suspend
        ;;
    *BIOS*)
        systemctl reboot --firmware-setup
        ;;
esac
